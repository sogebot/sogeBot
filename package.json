{
  "name": "sogebot",
  "version": "5.9.0-SNAPSHOT",
  "description": "Free Twitch Bot built on Node.js",
  "private": true,
  "main": "main.js",
  "author": "Michal Orlik <sogehige@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=7.0"
  },
  "dependencies": {
    "async-request": "^1.2.0",
    "auto-load": "^3.0.0",
    "basic-auth": "^2.0.0",
    "bootstrap": "^4.0.0-beta.2",
    "bootstrap-menu": "^1.0.14",
    "bootstrap-slider": "^10.0.0",
    "bootstrap-toggle": "^2.2.2",
    "chalk": "^2.3.0",
    "cross-env": "^5.1.1",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "figlet": "^1.2.0",
    "flat": "^4.0.0",
    "flv.js": "^1.3.3",
    "glob": "^7.1.2",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "mathjs": "^3.17.0",
    "moment": "^2.19.2",
    "moment-precise-range-plugin": "^1.2.4",
    "mongodb": "^2.2.33",
    "nedb": "^1.8.0",
    "nedb-promise": "^2.0.1",
    "node-hue-api": "^2.4.2",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "popper.js": "^1.12.9",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "safe-eval": "^0.3.0",
    "snekfetch": "3.6.0",
    "socket.io": "^2.0.4",
    "tmi.js": "^1.2.1",
    "twitch-emoticons": "git+https://github.com/sogehige/twitch-emoticons.git#v3api",
    "twitter": "^1.7.1",
    "velocity-animate": "^1.5.0",
    "winston": "^2.4.0",
    "youtube-search": "^1.0.10",
    "ytdl-core": "^0.18.2"
  },
  "scripts": {
    "build-css": "npm-run-all --parallel css-theme-light-compile css-theme-dark-compile",
    "build-zip": "npm run cleanup:dist; rm -rf node_modules; rm npm-shrinkwrap.json; npm install; npm shrinkwrap; echo Removing sogeBot-$npm_package_version.zip; rm sogeBot-$npm_package_version.zip; echo Creating new sogeBot-$npm_package_version.zip; zip -qr sogeBot-$npm_package_version.zip npm-shrinkwrap.json config.example.json libs/ locales/ main.js public/ launch.sh LICENSE migrate.js package.json README.md tools/ bin/ bat/ scss/",
    "css-theme-light-compile": "node-sass --output-style expanded --precision 6 scss/themes/light.scss public/dist/css/light.css",
    "css-theme-dark-compile": "node-sass --output-style expanded --precision 6 scss/themes/dark.scss public/dist/css/dark.css",
    "precommit-msg": "echo 'Pre-commit checks...' && exit 0",
    "standard": "standard main.js && standard test/* && standard libs/* && standard libs/systems/* && standard libs/overlays/* && standard libs/widgets/*",
    "test": "npm run standard",
    "test:mongodb": "npm run test:config:mongodb; mocha --recursive --timeout 4000 --exit",
    "test:nedb": "npm run test:config:nedb; mocha --recursive --timeout 4000 --exit",
    "test:config:mongodb": "cp config.json config.backup.json > /dev/null; cp config.example.json config.json; sed -i -- 's/nedb/mongodb/g' config.json",
    "test:config:nedb": "cp config.json config.backup.json > /dev/null; cp config.example.json config.json",
    "start": "node ./tools/migrate && npm-run-all --parallel build-css copy:dist && cross-env NODE_ENV=production node ./main || true",
    "start-no-migration": "npm run copy:dist && node ./main || true",
    "cleanup": "node ./tools/cleanup.js || true",
    "debug": "npm run copy:dist && node --inspect ./main || true",
    "cleanup:dist": "rm -rf ./public/dist/bootstrap* ./public/dist/carousel/* ./public/dist/gallery/* ./public/dist/jquery ./public/dist/lodash ./public/dist/velocity-animate ./public/dist/popper.js ./public/dist/flv.js ./public/dist/css/dark.css ./public/dist/css/light.css",
    "copy:dist": "node tools/copy-dist-files.js"
  },
  "pre-commit": [
    "precommit-msg",
    "standard"
  ],
  "devDependencies": {
    "chai": "^4.1.2",
    "locate-path": "^2.0.0",
    "mocha": "4.0.1",
    "pre-commit": "^1.2.2",
    "sinon": "^4.1.2",
    "standard": "^10.0.3",
    "test-until": "^1.1.1"
  }
}
